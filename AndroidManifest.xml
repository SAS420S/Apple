<?xml version="1.0" encoding="utf-8"?>
<manifest
    android:compileSdkVersion="32"
    android:compileSdkVersionCodename="13"
    package="com.king2hack"
    platformBuildVersionCode="32"
    platformBuildVersionName="13"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <application
        android:theme="@style/AppTheme"
        android:label="@string/app_name"
        android:icon="@drawable/app_icon"
        android:name="com.mrx2hack.SketchApplication"
        android:allowBackup="true"
        android:usesCleartextTraffic="true">
        <activity
            android:theme="@style/NoActionBar"
            android:name="com.mrx2hack.MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|screenLayout|screenSize|smallestScreenSize"
            android:windowSoftInputMode="stateHidden"
            android:hardwareAccelerated="true"
            android:supportsPictureInPicture="true">
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN" />
                <category
                    android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:theme="@style/NoActionBar"
            android:name="com.mrx2hack.HomeActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|screenLayout|screenSize|smallestScreenSize"
            android:windowSoftInputMode="stateHidden"
            android:hardwareAccelerated="true"
            android:supportsPictureInPicture="true" />
        <activity
            android:theme="@style/NoActionBar"
            android:name="com.mrx2hack.PlayActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|screenLayout|screenSize|smallestScreenSize"
            android:windowSoftInputMode="stateHidden"
            android:hardwareAccelerated="true"
            android:supportsPictureInPicture="true" />
        <activity
            android:name="com.mrx2hack.DebugActivity"
            android:screenOrientation="portrait" />
        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>
</manifest>